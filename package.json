{
  "name": "my-wp-theme-boilerplate",
  "version": "0.1.8",
  "description": "WP Theme Boilerplate meant as a starting point for WP theme development.",
  "author": "David Stingl",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
	"Theme",
	"Underscores",
	"WP Gulp",
	"wpgulp"
  ],
  "homepage": "https://github.com/berlindave/my-wp-theme-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/berlindave/my-wp-theme-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/berlindave/my-wp-theme-boilerplate/issues"
  },
  "devDependencies": {
	"@babel/core": "^7.0.0",
	"@babel/register": "^7.0.0",
	"@babel/preset-env": "^7.12.1",
	"@wordpress/scripts": "^12.1.0",
	"beepbeep": "^1.2.2",
	"browser-sync": "^2.11.1",
	"dir-archiver": "^1.1.1",
	"eslint": "^7.12.0",
	"eslint-config-wordpress": "^2.0.0",
	"gulp": "^4.0.0",
	"gulp-autoprefixer": "^7.0.1",
	"gulp-babel": "^8.0.0",
	"gulp-cache": "^1.0.2",
	"gulp-concat": "^2.5.2",
	"gulp-filter": "^6.0.0",
	"gulp-imagemin": "^7.1.0",
	"gulp-line-ending-corrector": "^1.0.1",
	"gulp-merge-media-queries": "^0.2.1",
	"gulp-notify": "^3.0.0",
	"gulp-plumber": "^1.2.0",
	"gulp-remember": "^1.0.1",
	"gulp-rename": "^2.0.0",
	"gulp-rtlcss": "^1.2.0",
	"gulp-sass": "^4.0.1",
	"gulp-sort": "^2.0.0",
	"gulp-sourcemaps": "^3.0.0",
	"gulp-uglify": "^3.0.0",
	"gulp-uglifycss": "^1.0.6",
	"gulp-wp-pot": "^2.0.7",
	"gulp-zip": "^5.0.2",
    "node-sass": "^4.14.1",
    "rtlcss": "^2.5.0"
  },
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  },
  "scripts": {
    "watch": "node-sass sass/ -o ./ --source-map true --output-style expanded --indent-type tab --indent-width 1 -w",
    "compile:css": "node-sass sass/ -o ./ && stylelint '*.css' --fix || true && stylelint '*.css' --fix",
    "compile:rtl": "rtlcss style.css style-rtl.css",
    "lint:scss": "wp-scripts lint-style 'sass/**/*.scss'",
    "lint:js": "wp-scripts lint-js 'js/*.js'",
	"bundle": "dir-archiver --src . --dest ../_s.zip --exclude .DS_Store .stylelintrc.json .eslintrc .git .gitattributes .github .gitignore README.md composer.json composer.lock node_modules vendor package-lock.json package.json .travis.yml phpcs.xml.dist sass style.css.map",
	"start": "gulp",
	"zip": "gulp zip",
	"styles": "gulp styles",
	"images": "gulp images",
	"js-custom": "gulp customJS",
	"js-vendors": "gulp vendorsJS",
	"translate": "gulp translate",
	"styles-rtl": "gulp stylesRTL",
	"cache-clear": "gulp clearCache"
  }
}
